    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js"
        }

        , {
            "name": "Debug Mocha tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["-d", "./test/**/*.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            
            "env": {
                "NODE_ENV": "development"
                , "DEBUG" : "opflow:*"
            }
            
        }
        , {
            "name": "Debug Mocha regex",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["-d", "./test/**/*.js", "-g", "disk"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            
            "env": {
                "NODE_ENV": "development"
                , "DEBUG" : "opflow:*"
            }
            
        }
    ]
}